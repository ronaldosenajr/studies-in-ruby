<h1 class="text-center mt-4">Alpha Bloggers</h1>
<%= will_paginate @users, list_classes: %w(pagination justify-content-center), previous_label: 'Previous', next_label: 'Next'%>
<section class="container">
  <%@users.each do |user|%>
    <div class="row justify-content-md-center" id="teste">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user, class: 'text-decoration-none' %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text">
              <%= pluralize(user.articles.count, "article")%>
            </p>
            <%= link_to 'View profile', user, class: "btn btn-outline-success" %>
            <% if logged_in? && user == current_user %>
              <%= link_to 'Edit profile', edit_user_path(user.id), class: "btn btn-outline-info" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small> Joined <%= time_ago_in_words(user.created_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <%end%>
  <p>
    <%= link_to 'Create new article', new_article_path %>
  </p>
</section>
<%= will_paginate @users, list_classes: %w(pagination justify-content-center mb-4), previous_label: 'Previous', next_label: 'Next'%>
