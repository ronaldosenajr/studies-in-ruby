<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-light rounded', local: true) do |f|%>
        <div class=" form-group row mb-3">
          <%= f.label :username, class: 'col-2 col-form-label fst-italic text-secondary' %>
          <div class=" col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Enter a username' %>
          </div>
        </div>
        <div class=" form-group row mb-3">
          <%= f.label :email, class: 'col-2 col-form-label fst-italic text-secondary' %>
          <div class=" col-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter your email address' %>
          </div>
        </div>
        <div class=" form-group row mb-3">
          <%= f.label :password, class: 'col-2 col-form-label fst-italic text-secondary' %>
          <div class=" col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Choose your password' %>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <p><%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %></p>
    </div>
  </div>
</div>
