<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: 'shadow p-3 mb-3 bg-light rounded' ,local: true) do |f|%>
        <div class=" form-group row mb-3">
          <%= f.label :title, class: 'col-2 col-form-label fst-italic text-secondary' %>
          <div class=" col-10">
            <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: 'Title content' %>
          </div>
        </div>
        <div class=" form-group row mb-3">
          <%= f.label :description, class: 'col-2 col-form-label fst-italic text-secondary' %>
          <div class=" col-10">
            <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: 'Description content' %>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <p><%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %></p>
    </div>
  </div>
</div>
